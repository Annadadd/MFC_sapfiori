    <SplitContainer>
        <masterPages>
            <semantic:MasterPage title="Utenti">
                <List id="list" items="{UtentiModel>/utenti}">
                    <headerToolbar>
                        <OverflowToolbar>
                            <content>
                                <ToolbarSpacer />
                                <SearchField id="searchField" width="auto" placeholder="searchfield" search=".onSearch" />
                                <Button id="sortUsersButton" icon="sap-icon://sort" tooltip="{i18n>sortButtonText}" press="onSort" />
                            </content>
                        </OverflowToolbar>
                    </headerToolbar>
                    <items>
                        <ObjectListItem id="ObjectListItem" type="Navigation" press="onSelectionChange" title="{UtentiModel>cognome}" intro="{UtentiModel>nome}" />
                    </items>
                </List>

                <semantic:landmarkInfo>
                    <PageAccessibleLandmarkInfo rootLabel="Root label" headerLabel="Header label" footerLabel="Footer label" />
                </semantic:landmarkInfo>
                <!-- <semantic:sort>
                    <semantic:SortSelect change="onSemanticSelectChange" items="">
                        <core:Item key="{type}" text="{type}" />
                    </semantic:SortSelect>
                </semantic:sort> -->

                <semantic:filter>
                    <semantic:FilterAction press="onSemanticButtonPress" />
                </semantic:filter>
                <semantic:group>
                    <semantic:GroupAction press="onSemanticButtonPress" />
                </semantic:group>

            </semantic:MasterPage>
        </masterPages>

        <detailPages>    
            <semantic:DetailPage title="Dettaglio Utente" id="detail">
                <f:SimpleForm
                    id="SimpleFormDisplay354wide"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    title=""
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <Label text="id" />
                        <Input id="id" value="{UtentiModel>id}" editable="false" />

                        <Label text="cognome" />
                        <Input id="cognome" value="{UtentiModel>cognome}" editable="false" />

                        <Label text="nome" />
                        <Input id="nome" value="{UtentiModel>nome}" editable="false" />

                        <Label text="ruolo" />
                        <Input id="ruolo" value="{UtentiModel>ruolo}" editable="false" />

                        <Label text="email" />
                        <Input id="email" value="{UtentiModel>email}" editable="false" />

                        <Label text="telefono" />
                        <Input id="telefono" value="{UtentiModel>telefono}" editable="false" />
                    </f:content>
                </f:SimpleForm>

                <semantic:customFooterContent>
                    <OverflowToolbarButton icon="sap-icon://save" id="saveBtn" press="save" visible="false" />
                    <OverflowToolbarButton icon="sap-icon://refresh" id="refreshBtn" press="refresh" visible="false" />
                    <OverflowToolbarButton icon="sap-icon://edit" id="editBtn" press="edit" visible="true" />
                    <OverflowToolbarButton icon="sap-icon://add" id="addBtn" press="add" />
                </semantic:customFooterContent>

            </semantic:DetailPage>
           
        </detailPages>
    </SplitContainer>
</mvc:View>
